{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "module": "ESNext",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": [
    "*.ts",
    "data/*.ts",
    "data/*.json",
    ".contentlayer/generated",
    ".contentlayer/generated/**/*.json"
  ],
  "exclude": ["node_modules"]
}

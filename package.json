{
  "name": "@blog/workspaces",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:blog": "turbo run build --filter=blog...",
    "build:tools": "turbo run build --filter=tools...",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "release": "turbo run build --filter=blog...",
    "type-check": "turbo run type-check",
    "start": "turbo run start"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "prettier": "3.2.5",
    "turbo": "^2.2.3"
  },
  "packageManager": "pnpm@8.15.9"
}